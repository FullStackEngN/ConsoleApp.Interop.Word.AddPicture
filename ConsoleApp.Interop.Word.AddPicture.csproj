  </ItemGroup>

  <ItemGroup>
    <None Update="InteropDLL\Microsoft.Office.Interop.Word.dll">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
